<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => Task %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @task.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @task.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_date) %></dt>
      <dd><pre class="prettyprint"><%= @task.task_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:task_time) %></dt>
      <dd><pre class="prettyprint"><%= @task.task_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @task.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:city) %></dt>
      <dd><pre class="prettyprint"><%= @task.city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip) %></dt>
      <dd><pre class="prettyprint"><%= @task.zip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:long_description) %></dt>
      <dd><pre class="prettyprint"><%= @task.long_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:short_description) %></dt>
      <dd><pre class="prettyprint"><%= @task.short_description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

